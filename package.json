{
  "name": "watfish",
  "version": "1.0.0-alpha.4",
  "description": "Simple development platform with process management & router",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "wtf": "dist/cli.js"
  },
  "scripts": {
    "prepare": "npm run test && npm run dist",
    "dist": "./scripts/dist",
    "lint": "tslint --project tsconfig.json '@(src|tests|types|docs)/**/*.@(ts|tsx)'",
    "tests": "jest",
    "test": "npm run lint && npm run tests -- --coverage --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jakesidsmith/watfish.git"
  },
  "keywords": [
    "development",
    "server",
    "router",
    "process",
    "management",
    "platform"
  ],
  "author": "Jake 'Sid' Smith",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jakesidsmith/watfish/issues"
  },
  "homepage": "https://github.com/jakesidsmith/watfish#readme",
  "dependencies": {
    "@types/colors": "^1.2.1",
    "@types/dotenv": "^4.0.3",
    "@types/event-stream": "^3.3.34",
    "@types/express": "^4.11.1",
    "@types/http-proxy": "^1.16.1",
    "@types/node": "^8.10.17",
    "@types/ws": "^3.2.1",
    "@types/xml": "^1.0.2",
    "colors": "^1.3.0",
    "dotenv": "^6.0.0",
    "event-stream": "^3.3.4",
    "express": "^4.16.3",
    "http-proxy": "^1.18.1",
    "jargs": "^0.4.1",
    "moment": "^2.22.1",
    "typescript": "^2.8.3",
    "ws": "^3.3.3",
    "xml": "^1.0.1"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "jest": "^23.0.1",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^4.1.1"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/tests/helpers/setup.ts"
    ],
    "coveragePathIgnorePatterns": [
      "types/.*\\.d\\.ts",
      "tests/helpers/",
      "tests/mocks/"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/tests/.*|\\.(test|spec))\\.(ts|tsx|js|jsx)$",
    "testPathIgnorePatterns": [
      "tests/helpers/",
      "tests/mocks/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  }
}
